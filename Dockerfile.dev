FROM golang:1.24-alpine

WORKDIR /app

# Install Air with a specific version for better reproducibility
RUN go install github.com/air-verse/air@v1.49.0

# Install development tools and essential packages
RUN apk --no-cache add ca-certificates tzdata curl jq

# Copy go.mod and go.sum files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy the rest of the application (consider using .dockerignore)
COPY . .

# Set development environment variables
ENV GO_ENV=development
ENV GOTRACEBACK=all

# Use air for live reloading in development
CMD [ "air", "-c", ".air.toml" ]
